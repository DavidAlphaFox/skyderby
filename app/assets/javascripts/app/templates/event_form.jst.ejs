<div class="modal-content">
    <form class="form-horizontal" id="event-form" action='#' role='form'>
        <input id="#event-id" type='hidden' name="event[id]"/>

        <div class='modal-header'>
            <button class='close' type='button' data-dismiss='modal'>
                <span aria-hidden: 'true'>
                    &times;
                </span>
                <span class='sr-only'>
                    Close
                </span>
            </button>
	    <h4 class='modal-title'><%= title %></h4>
        </div>

        <div class='modal-body'>
            <div class='form-group'>
                <span class='col-sm-4 control-label'>
                    <%= I18n.t('activerecord.attributes.event.name') + ':' %>
                </span>
                <div class='col-sm-8'>
                    <input class='form-control' id='event-name' name='event[name]' />
                </div>
            </div>

	        <div class='form-group'>
		        <span class='col-sm-4 control-label'>
			    	<%= I18n.t('activerecord.attributes.event.starts_at') + ':' %>
			    </span>
			    <div class='col-sm-8'>
			    	<input name='event[starts_at]' class='form-control datepicker' /> 
		        </div>
	        </div>

            <div class='form-group row'>
                <span class='col-sm-4 control-label'>
					<%= I18n.t('events.show.comp_window') + ':' %>
			    </span>
				<div class='col-sm-3'>
                    <input name='event[range_from]' class='form-control' />
		        </div>
				<span class='col-sm-1 text-center'> - </span>
				<div class='col-sm-3'>
                    <input name='event[range_to]' class='form-control' />
		        </div>
	        </div>

	        <div class='form-group'>
                <span class='col-sm-4 control-label'>
					<%= I18n.t('activerecord.attributes.event.place') + ':' %>
			    </span>
			    <div class='col-sm-8'>
			    	<select name='event[place_id]' class='form-control' /> 
		        </div>
	        </div>

	        <div class='form-group'>
                <span class='col-sm-4 control-label'>
					<%= I18n.t('activerecord.attributes.event.wind_cancellation') + ':' %>
			    </span>
			    <div class='col-sm-8'>
                    <div class='btn-group' data-toggle='buttons'>
						<label id='wind-cancellation-disabled-label' class='btn btn-default'>
						    <input type='radio' name='event[wind_cancellation]' value='false' autocomplete='off' />
							<%= I18n.t('general.disabled') %>
						</label>
                        <label id='wind-cancellation-enabled-label' class='btn btn-default'>
							<input type='radio' name='event[wind_cancellation]' value='true' autocomplete='off' />
							<%= I18n.t('general.enabled') %>
						</label>
				     </div>
				</div>
			</div>
        </div>

        <div class='modal-footer'>
            <input class='btn btn-primary' type='submit' value="<%= I18n.t('general.save') %>" />
            <button class='btn btn-default' type='button' data-dismiss='modal'>
                <%= I18n.t('general.cancel') %>
            </button>
        </div>
    </form>
</div>  
