/*Общие стили для событий*/

.event-request { margin-top:15px }

.template-row {
  display: none;
}

.edit-competitor, .edit-section {
  margin-left: 10px;
}

.delete-competitor, .delete-section {
  margin-left: 5px;
}

td .edit-section,
td .edit-competitor,
td .delete-section,
td .delete-competitor {
  visibility: hidden;
}

td:hover .edit-section,
td:hover .delete-section,
td:hover .edit-competitor,
td:hover .delete-competitor{
  visibility: visible;
}