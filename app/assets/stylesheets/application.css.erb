html, body {
  height: 100%;
}

body, p, ol, ul, td {
  font-family: verdana, arial, helvetica, sans-serif;
  font-size:   13px;
  line-height: 18px;
}

#wrap {
  min-height: 100%;
  height: auto !important;
  height: 100%;
  margin: 0 auto -100px;
  padding: 0 0 100px;
}

.img-50 {
  height: 32px;
  width: 32px;
}

a.dropdown-toggle.profile-dropdown {
  padding-bottom: 9px;
  padding-top: 9px
}

.top-buffer { margin-top: 20px }
.top-buffer-10 { margin-top: 10px }

.clickableRow { cursor: pointer }

.datepicker {
  z-index: 1151 !important;
}

.btn-file {
  position: relative;
  overflow: hidden;
}

.btn-file input[type=file] {
  position: absolute;
  top: 0;
  right: 0;
  min-width: 100%;
  min-height: 100%;
  font-size: 100px;
  text-align: right;
  filter: alpha(opacity=0);
  opacity: 0;
  background: red;
  cursor: inherit;
  display: block;
}

input[readonly] {
  background-color: white !important;
  cursor: text !important;
}
