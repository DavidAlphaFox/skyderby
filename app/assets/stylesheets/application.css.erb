.img-50 {
  height: 20px;
  width: 20px;
}

.top-buffer { margin-top: 20px }
.clickableRow { cursor: pointer }

.clouds-bg {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: url(<%= asset_path('background.jpg') %>) no-repeat center center;
  background-size: cover !important;
  background-attachment: fixed !important;
  background-color: #fff;
  z-index: -100;
}

.bws-logo {
  opacity: 0.7;
  position: fixed;
  margin-right: -100;
  height: 100%;
  width: 100%;
  background: url(<%= asset_path('bws-cut.png') %>) no-repeat bottom right fixed;
  -o-background-size: auto 70%;
  -webkit-background-size: auto 70%;
  -moz-background-size: auto 70%;
  background-size: auto 70%;
  z-index: -50;
}

.jumbotron-event {
  height: 400px;
}
.event-bg {
  opacity: 0.6;
  position: absolute;
  background: url(<%= asset_path('event-bg.png') %>) no-repeat;
  background-size: contain;
  height: 100%;
  width: 100%;
}

.event-logo {
  position: absolute;
  background: url(<%= asset_path('event-logo.png') %>) no-repeat;
  background-size: contain;
  height: 100%;
  width: 100%;
}

.event-text {
  position: absolute;
  background: url(<%= asset_path('event-text.png') %>) no-repeat;
  background-size: contain;
  height: 100%;
  width: 100%;
}