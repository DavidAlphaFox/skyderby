.container
  %h2= t('devise.confirmations.new.resend_confirmation_instructions')

  = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
    = devise_error_messages!

    %div= f.label :email, t('activerecord.attributes.user.email')
      %br
      = f.email_field :email, autofocus: true

    %div= f.submit t('devise.confirmations.new.resend_confirmation_instructions')

  = render 'users/shared/links'
