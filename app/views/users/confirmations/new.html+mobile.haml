.page-wrap
  .center-block.devise-block
    %h2.text-center.text-muted= t('devise.confirmations.new.resend_confirmation_instructions')

    .content-block
      .content-container
        = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f|
          = devise_error_messages!

          .form-group
            = f.label :email, t('activerecord.attributes.user.email'), class: 'col-sm-2 control-label'
            .col-sm-6
              = f.email_field :email, autofocus: true, class: 'form-control input-lg'

          .form-group
            .col-sm-6.col-sm-offset-2
              = f.submit t('devise.confirmations.new.resend_confirmation_instructions'), class: 'btn btn-primary btn-lg'

          .form-group
            .col-sm-6.col-sm-offset-2
              = render 'users/shared/links'
