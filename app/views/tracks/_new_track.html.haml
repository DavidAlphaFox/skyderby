              = file_field_tag 'track_file', {:onChange => 'checkFile(this)'}

          .form-group
            .col-sm-offset-3.col-sm-9
              %h4.help-block=t 'static_pages.index.track_form.help'

          .form-group
            = label_tag t('static_pages.index.track_form.comment'), nil, :class => 'col-sm-3 control-label', :for => 'comment'
            .col-sm-9
              = text_area_tag 'comment', nil, :class => 'form-control', :rows => 3, :placeholder => t('static_pages.index.track_form.comment_plh')

          %div#alert-placeholder

        .modal-footer
          %button.btn.btn-default{:type => 'button', :data => {:dismiss => 'modal'}}=t('general.cancel')
          = submit_tag t('static_pages.index.track_form.submit'), :class => 'btn btn-default'