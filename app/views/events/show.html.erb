<%- model_class = Event -%>

<div class='page-header'>
  <h1>Событие: <%= @event.name %> <small>До начала 45 дней</small></h1>
</div>

<div class="tabbable">
  <ul class="nav nav-tabs" id="tabs" data-tabs="tabs">
    <li class="disabled"><a href="#results">Результаты</a></li>
    <li class="active"><a href="#overview" data-toggle="tab">Обзор</a></li>
    <li><a href="#competitors" data-toggle="tab">Участники</a></li>
    <li><a href="#admin" data-toggle="tab">Администрирование</a></li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane" id="results">
      <h2>Результаты соревнований</h2>
    </div>

    <div class="tab-pane active" id="overview">

      <h2>Описание</h2>
      <%= simple_format @event.descriprion %>

    </div>

    <div class="tab-pane" id="competitors">
      <%= render :partial => 'competitors_table' %>
    </div>

    <div class="tab-pane" id="admin">
      <%= render :partial => 'admin_tab' %>
    </div>
  </div>
</div>