$('#modal').modal('hide');

$('#event-header').html("<%= j render('header') %>");

$('.event-status-button').html(
  '<%= "#{t('activerecord.attributes.event.status')}: #{t('event_status.' + @event.status)}" %> ' +
  '<i class="fa fa-caret-down"></i>'
);

$('.btn-group.event-status-group li').removeClass('active');
$('.event-set-status-' + "<%= @event.status %>").closest('li').addClass('active');

$('.btn-group.open').removeClass('open');
