.modal.fade#result-form-modal{:tabindex => '-1', :role => 'dialog', :aria => {:labelledby => 'myModalLabel', :hidden => 'true'}}
  .modal-dialog
    .modal-content
      %form.form-horizontal#result-form{:action => '#', :role => 'form'}
        %input#result-fm-id{:type => 'hidden'}
        %input#result-fm-competitor-id{:type => 'hidden'}
        %input#result-fm-round-id{:type => 'hidden'}

        .modal-header
          %button.close{:type => 'button', :data => {:dismiss => 'modal'}}
            %span{:aria => {:hidden => 'true'}}
              &times;
            %span.sr-only
              Close
          %h4.modal-title#result-form-modal-title= ''

        .modal-body
          .tabpanel
            -# <!-- Nav tabs -->
            %ul.nav.nav-tabs{:role => 'tablist'}
              %li#rm-li-new.active{:role => 'presentation'}
                %a{:href => '#rmt-new-track', :aria => {:controls => "rmp-new-track"}, :role => "tab", :data => {:toggle => "tab"}}
                  = 'Новый трек'
              %li#rm-li-exist{:role => 'presentation'}
                %a{:href => '#rmt-existent-track', :aria => {:controls => "rmp-existent-track"}, :role => "tab", :data => {:toggle => "tab"}}
                  = 'Существующий трек'
              %li#rm-li-delete-result{:role => 'presentation'}
                %a{:href => '#rmt-delete-result', :aria => {:controls => "rmp-delete-result"}, :role => "tab", :data => {:toggle => "tab"}}
                  = 'Удалить'

            -# <!-- Tab panes -->
            .tab-content
              .tab-pane.active#rmt-new-track{:role => "tabpanel"} 
                .form-group.top-buffer
                  %span.col-sm-3.control-label= 'Файл:'
                  .col-sm-9
                    .input-group
                      %input.form-control{:type => "text", :readonly => true}
                      %span.input-group-btn
                        %span.btn.btn-default.btn-file
                          Browse&hellip; 
                          - warning_messages = {:ext_w1 => t('static_pages.index.track_form.warnings.file_ext_w1_html'),
                            :ext_w2 => t('static_pages.index.track_form.warnings.file_ext_w2_html'),
                            :size_w1 => t('static_pages.index.track_form.warnings.file_size_w1_html'),
                            :size_w2 => t('static_pages.index.track_form.warnings.file_size_w2_html')}
                          %input.track-file-input{:name => 'track_file', :type => "file", :data => {:placeholder => 'rm-alert-placeholder', :warnings => warning_messages.to_json}}

                #rm-alert-placeholder
                .form-group
                  .col-sm-9.col-sm-offset-3
                    %a#new-result-from-new-track.btn.btn-success= 'Загрузить'



              .tab-pane#rmt-existent-track{:role => "tabpanel"} 
                .form-group.top-buffer
                  %span.col-sm-3.control-label= 'Трек'
                  .col-sm-9
                    = collection_select :result, :track_id, Track.all.order(:name), :id, :presentation, {:promt => true}, {:class => 'form-control'}
                
                .form-group
                  .col-sm-9.col-sm-offset-3
                    %a#new-result-from-exist-track.btn.btn-success{:data => {:dismiss => 'modal'}}= 'Сохранить'

              .tab-pane#rmt-delete-result{:role => "tabpanel"} 
                .top-buffer
                %button#rm-button-delete-result.btn.btn-danger{:data => {:dismiss => 'modal'}}
                  = 'Удалить результат'

          
        -# .modal-footer
          %button.btn.btn-default{:type => 'button', :data => {:dismiss => 'modal'}}= t 'general.cancel'

