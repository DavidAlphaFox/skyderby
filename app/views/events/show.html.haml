- provide :title, @event.name

- units = {:time => t('units.t_unit'), :distance => t('units.kmh'), :speed => t('units.m')}
.event-data{:data => {:details => @event.details.to_json.html_safe, :units => units.to_json, :locale => locale}}

.container.top-buffer
  .row
    .col-md-12.text-center
      %h1= @event.name
      %h3= "Соревновательный диапазон: #{@event.range_from} - #{@event.range_to} м"

  .row.top-buffer
    .col-md-7
      %button.btn.btn-default#button-add-class
        %i.fa.fa-plus
        = 'Класс'
      %button.btn.btn-default#button-add-competitor
        %i.fa.fa-plus
        = 'Участник'
      %button.btn.btn-default#button-add-round
        %i.fa.fa-plus
        = 'Раунд'
    .col-md-5
      .pull-right
        .btn-group{:data => {:toggle => 'buttons'}}
          %label.btn.btn-default{ :class => ('active' if @event.draft?) }
            %input#draft{:type => 'radio', :name => 'event-status', :value => 'draft',:autocomplete => 'off'}
            = 'Черновик'
          %label.btn.btn-default{ :class => ('active' if @event.published?) }
            %input#published{:type => 'radio', :name => 'event-status', :value => 'published',:autocomplete => 'off'}
            = 'Опубликовано'
          %label.btn.btn-default{ :class => ('active' if @event.finished?) }
            %input#finished{:type => 'radio', :name => 'event-status', :value => 'finished',:autocomplete => 'off'}
            = 'Завершено'
  .row.top-buffer
    .col-md-12
      %table.table.table-bordered#results-table

  .row
    .col-md-3
      %h2= 'Спонсор'
    .col-md-3
      %h2= 'Спонсор'
    .col-md-3
      %h2= 'Спонсор'
    .col-md-3
      %h2= 'Спонсор'

  .row
    .col-md-3
      %h2= 'Ссылка на событие'
    .col-md-3
      %h2= 'Ссылка на событие'

-# Modals

-# Section modal

.modal.fade#section-form-modal{:tabindex => '-1', :role => 'dialog', :aria => {:labelledby => 'myModalLabel', :hidden => 'true'}}
  .modal-dialog
    .modal-content
      %form.form-horizontal#section-form{:action => '#', :role => 'form'}
        %input#section-id{:type => 'hidden'}

        .modal-header
          %button.close{:type => 'button', :data => {:dismiss => 'modal'}}
            %span{:aria => {:hidden => 'true'}}
              &times;
            %span.sr-only
              Close
          %h4.modal-title#section-form-modal-title= ''

        .modal-body
          .form-group
            %span.col-sm-3.control-label= 'Класс:'
            .col-sm-9
              %input.form-control#section-name

        .modal-footer
          %input.btn.btn-primary#submit-section-form{:data => {:dismiss => 'modal'}, :value => "#{t 'general.save'}"}
          %button.btn.btn-default{:type => 'button', :data => {:dismiss => 'modal'}}= t 'general.cancel'

-#Competitor modal

.modal.fade#competitor-form-modal{:tabindex => '-1', :role => 'dialog', :aria => {:labelledby => 'myModalLabel', :hidden => 'true'}}
  .modal-dialog
    .modal-content
      %form.form-horizontal#competitor-form{:role => 'form'}
        %input#competitor-id{:type => 'hidden'}
        .modal-header
          %button.close{:type => 'button', :data => {:dismiss => 'modal'}}
            %span{:aria => {:hidden => 'true'}}
              &times;
            %span.sr-only
              Close
          %h4.modal-title#competitor-form-modal-title= ''

        .modal-body
          .form-group.row
            %span.col-sm-3.control-label= 'Фамилия:'
            .col-sm-4
              %input.form-control.competitor-profile-autocomplete#competitor-last-name{:data => {:idField => '#competitor-profile-id', :firstNameField => '#competitor-first-name'}}
            %span.col-sm-1.control-label= 'Имя:'
            .col-sm-4
              %input.form-control#competitor-first-name
            %input#competitor-profile-id{:type => 'hidden'}
          .form-group
            %span.col-sm-3.control-label= 'Костюм:'
            .col-sm-9
              %input.form-control.wingsuit-autocomplete#competitor-wingsuit{:placeholder => 'Название модели (Vampire, Jedei, Colugo, Track suit)', :data => {:idfield => '#competitor-wingsuit-id'}}
              %input#competitor-wingsuit-id{:type => 'hidden'}
          .form-group
            %span.col-sm-3.control-label= 'Класс:'
            .col-sm-9
              %select.form-control#competitor-section
        .modal-footer
          %input.btn.btn-primary#submit-competitor-form{:data => {:dismiss => 'modal'}, :value => "#{t 'general.save'}"}
          %button.btn.btn-default{:type => 'button', :data => {:dismiss => 'modal'}}= t 'general.cancel'
