.container.top-buffer
  .row
    .btn-group.col-sm-10{:data => {:toggle => 'buttons'}}
      %label.btn.btn-default{ :class => ('active' if @event.draft?) }
        %input#draft{:type => 'radio', :name => 'options', :autocomplete => 'off'}
        = 'Черновик'
      %label.btn.btn-default{ :class => ('active' if @event.published?) }
        %input#published{:type => 'radio', :name => 'options', :autocomplete => 'off'}
        = 'Опубликовано'
      %label.btn.btn-default{ :class => ('active' if @event.finished?) }
        %input#finished{:type => 'radio', :name => 'options', :autocomplete => 'off'}
        = 'Завершено'

  .row
    .col-md-12.text-center
      %h1= @event.name
  %hr
  .row
    .col-md-12
      %h3= 'Соревновательный диапазон: 3000 - 2000 м'
  .row
    .col-md-12
      %button.btn.btn-default#button-add-class
        %i.fa.fa-plus
        = 'Класс'
      %button.btn.btn-default#button-add-competitor
