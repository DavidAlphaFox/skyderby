- provide :title, @event.name

- units = {time: t('units.t_unit'), 
           distance: t('units.m'), 
           speed: t('units.kmh')}

.event-data{data: {details: event_details,
                   units: units.to_json,
                   locale: locale,
                   dictionary: event_dictionary,
                   can_manage: can?(:update, @event).to_s }}

.container.top-buffer
  .row
    .col-md-6.col-md-offset-3.text-center
      %h1
        %span#title-competition-name= @event.name

      %h3#title-competition-range= "#{t('events.competition_range')} #{@event.range_from} - #{@event.range_to} #{t('units.m')}"
    .col-md-3
      .pull-right#edit-event-commands

  .row#edit-table-commands
  .row.top-buffer
    .col-md-12
      %table.table.table-bordered#results-table

-# Modals
= event_settings_modal
= section_modal
= competitor_modal
= round_modal
= result_modal
