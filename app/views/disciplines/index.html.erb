<%- model_class = Discipline -%>
<script type="text/javascript" charset="utf-8">
    $(document).ready(function($) {
        $(".clickableRow").click(function() {
            window.document.location = $(this).data("url");
        });
    });
</script>

<div class="page-header">
  <h1><%=t :discipline_header %></h1>
</div>
<table class="table table-hover">
  <thead>
  <tr>
    <th><%=t :discipline_id %></th>
    <th><%=t :discipline_name %></th>
  </tr>
  </thead>
  <tbody>
  <% @disciplines.each do |d| %>
      <tr class="clickableRow" style="cursor: pointer" data-url="<%= discipline_path(:id => d.id) %>">
        <td class="text-info"><%= d.id %></td>
        <td class="text-info"><%= d.name %></td>
      </tr>
  <% end %>
  </tbody>
</table>