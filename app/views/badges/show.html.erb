<%- model_class = Badge -%>
<div class="container">
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
    <dd><%= @badge.name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:kind) %>:</strong></dt>
    <dd><%= @badge.kind %></dd>
    <dt><strong><%= model_class.human_attribute_name(:user_profile_id) %>:</strong></dt>
    <dd><%= @badge.user_profile_id %></dd>
  </dl>

  <%= link_to t('.back', :default => t("helpers.links.back")),
                badges_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_badge_path(@badge), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                badge_path(@badge),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
</div>
