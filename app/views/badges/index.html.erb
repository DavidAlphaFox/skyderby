<%- model_class = Badge -%>
<div class="container">
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_badge_path,
              :class => 'btn btn-default' %>

  <table class="table table-striped top-buffer">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:kind) %></th>
        <th><%= model_class.human_attribute_name(:user_profile_id) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @badges.each do |badge| %>
        <tr>
          <td><%= link_to badge.id, badge_path(badge) %></td>
          <td><%= badge.name %></td>
          <td><%= badge.kind.humanize %></td>
          <td><%= badge.user_profile.name %></td>
          <td><%= badge.created_at %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_badge_path(badge), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        badge_path(badge),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
