.row
  .col-sm-12
    %h1.light-header 
      = @tournament.name

.row
  .col-sm-12
    - controller_path = controller.controller_path
    = link_to tournament_path(@tournament), class: ['btn-flat btn-tab', ('active' if controller_path == 'tournaments')] do
      Scoreboard
    - if @tournament.with_qualification?
      = link_to tournament_qualification_path(@tournament), class: ['btn-flat btn-tab', ('active' if controller_path == 'tournaments/qualifications')] do
        Qualification
    - if can? :edit, @tournament
      = link_to tournament_tournament_competitors_path(@tournament.id), class: ['btn-flat btn-tab', ('active' if controller_path == 'tournaments/tournament_competitors')] do
        Competitors

