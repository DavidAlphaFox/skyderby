- model_class = Tournament
.container
  .page-header
    %h1=t '.title', default: model_class.model_name.human.pluralize.titleize
  .top-buffer
    %table.table.table-striped
      %thead
        %tr
          %th= model_class.human_attribute_name(:id)
          %th= model_class.human_attribute_name(:name)
          %th= model_class.human_attribute_name(:created_at)
          - if can? :update, Tournament
            %th=t '.actions', default: t("helpers.actions")
      %tbody
        - @tournaments.each do |tournament|
          %tr
            %td= tournament.id
            %td= link_to tournament.name, tournament_path(tournament)
            %td= tournament.created_at
            - if can? :edit, Tournament
              %td
                = link_to t('.edit', default: t("helpers.links.edit")),
                              edit_tournament_path(tournament), class: 'btn btn-default btn-xs'
                = link_to t('.destroy', default: t("helpers.links.destroy")),
                              tournament_path(tournament),
                              method: :delete,
                              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
                              class: 'btn btn-xs btn-danger'

  - if can? :create, Tournament
    = link_to t('.new', default: t("helpers.links.new")),
                new_tournament_path,
                class: 'btn btn-primary'
