.navbar.navbar-default.navbar-fixed-top{role: 'navigation'}
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{type: 'button', data: {toggle: 'collapse', target: '.navbar-collapse'}}
        %span.sr-only= 'Toggle navigation'
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'SKY DERBY', root_path, class: 'navbar-brand'

    .navbar-collapse.collapse
      %ul.nav.navbar-nav.text-center
        - root_controller = controller.controller_path.split('/').first
        %li.navbar__link{class: ('navbar__link--active' if root_controller == 'tracks')}
          = link_to t('application.header.tracks'), tracks_path
        %li.navbar__link{class: ('navbar__link--active' if ['events', 'tournaments'].include? root_controller)}
          = link_to t('application.header.competitions'), events_path
        %li.navbar__link{class: ('navbar__link--active' if root_controller == 'virtual_competitions')}
          = link_to t('application.header.online_competitions'), virtual_competitions_path 
        - if !user_signed_in?
          %li.navbar__link
            = link_to t('application.header.sign_in'), new_user_session_path

      %ul.nav.navbar-nav.navbar-right
