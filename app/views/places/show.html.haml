.container
  .row.top-buffer
    .col-sm-12
      .place-map-wrapper
        .place-map
          %img{src: "https://maps.googleapis.com/maps/api/staticmap?center=#{@place.latitude},#{@place.longitude}&zoom=12&size=600x90&scale=2&maptype=hybrid"}
        .place-map-description
          .place-map-background
            %h1
              = @place.name
              %small= @place.information
            %h4= "Lat: #{@place.latitude}, Lon: #{@place.longitude}, MSL: #{@place.msl}"
      -# .col-sm-2
      -#   .pull-right
      -#     - if can? :update, @place
      -#       = link_to 'Edit', edit_place_path(@place), class: 'btn btn-default'

  %table.table.table-hover.top-buffer
    %thead
      %tr
        %th=t 'activerecord.attributes.track.id'
        %th=t 'activerecord.attributes.track.name'
        %th=t 'activerecord.attributes.track.suit'
        %th= 'Distance'
        %th= 'Speed'
        %th= 'Time'
        %th=t 'activerecord.attributes.track.comment'
        %th=t 'activerecord.attributes.track.uploaded_at'
    %tbody
      - @place.tracks.each do |track|
        %tr.clickableRow{data: {url: track_path(id: track.id)}}
          %td.text-info= track.id
          %td.text-info= track_pilot(track)
          %td.text-info= track.wingsuit.present? ? track.wingsuit.name : track.suit
          %td.text-info= track.distance.result if track.distance
          %td.text-info= track.speed.result if track.speed
          %td.text-info= track.time.result if track.time
          %td.text-muted= track.comment
          %td.text-info= track.created_at.strftime('%d.%m.%Y')
