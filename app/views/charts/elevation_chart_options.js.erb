<% mobile ||= false %>
{
  chart: {
    type: 'spline',
    marginLeft: <%= mobile ? 0 : 70 %>,
    <% if mobile %>
      marginRight: 0,
    <% end %>
    events: {
      load: function() {
        Skyderby.helpers.chart_load_callback('elevation_chart_', this.series);
      }
    }
  },
  title: {
    <% if mobile %>
      style: { 'color': "#666", "fontSize": "14px" },
    <% end %>
    text: '<%= t('charts.elev.title') %>'
  },
  plotOptions: {
    spline: {
      marker: {
        enabled: false
      }
    },
    area: {
      marker: {
        enabled: false
      }
    },
    series: {
      marker: {
        radius: 1
      },
      events: {
        legendItemClick: function() {
          localStorage.setItem('elevation_chart_' + this.options.code, !this.visible);
        }
      }
    }
  },
  yAxis: {
    min: 0,
    title: {
      text: ''
    }
  },
  tooltip: {
    shared: true,
    crosshairs: true
  },
  credits: {
    enabled: false
  },
  <% if mobile %>
    legend: {
      itemStyle: {
        fontSize: '10px'
      }
    },
  <% end %>
  series: [
    {
    name: I18n.t('charts.elev.series.elevation'),
    code: 'elevation',
    pointInterval: 10,
    tooltip: {
      valueSuffix: ' <%= t('units.' + altitude_units) %>',
    }
  },
  {
    name: I18n.t('charts.elev.series.distance'),
    code: 'distance',
    pointInterval: 10,
    tooltip: {
      valueSuffix: ' <%= t('units.' + distance_units) %>',
    }
  },
  {
    name: I18n.t('charts.elev.series.height'),
    code: 'height',
    type: 'area',
    fillOpacity: 0.3,
    color: Highcharts.getOptions().colors[0],
    lineWidth: 1,
    tooltip: {
      valueSuffix: ' <%= t('units.' + altitude_units) %>',
    }
  }
  ]
}
