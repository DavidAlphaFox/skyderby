= form_for [@event, @event_sponsor], html: {class: "form-horizontal tournament-form"} do |f|

  - if @event_sponsor.errors.any?
    #error_expl.panel.panel-danger
      .panel-heading
        %h3.panel-title
          = pluralize(@event_sponsor.errors.count, "error") 
          = 'prohibited this event_sponsor from being saved:'
      .panel-body
        %ul
        - @event_sponsor.errors.full_messages.each do |msg|
          = msg

  .form-group
    = f.label :name, class: 'control-label col-sm-2'
    .col-sm-5
      = f.text_field :name, class: 'form-control'
    = error_span(@event_sponsor[:name])

  .form-group
    = f.label :website, class: 'control-label col-sm-2'
    .col-sm-5
      = f.text_field :website, class: 'form-control'
    = error_span(@event_sponsor[:website])

  .form-group
    = f.label :logo, class: 'control-label col-sm-2'
    .col-sm-5
      = f.file_field :logo, class: 'form-control'
    = error_span(@event_sponsor[:logo])

  .col-sm-offset-2.col-sm-5
    = f.submit nil, class: 'btn btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")),
                events_path, class: 'btn btn-default'
