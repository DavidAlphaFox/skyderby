.modal-dialog
  .modal-content
    = form_for [@profile, @badge], remote: true, :html => { :class => "form-horizontal" } do |f|
      .modal-header
        %button.close{type: 'button', data: {dismiss: 'modal'}}
          %span{aria: {hidden: 'true'}}
            &times;
          %span.sr-only
            Close
        %h4.modal-title
          = t('activerecord.models.badge') + ': ' 
          - if @badge.new_record?
            = t('events.index.new')
          - else
            = @badge.name

      .modal-body
        .form-group
          = f.label :name, class: 'col-sm-4 control-label'
          .col-sm-8
            = f.text_field :name, class: 'form-control'

        .form-group
          = f.label :comment, class: 'col-sm-4 control-label'
          .col-sm-8
            = f.text_field :comment, class: 'form-control'

        .form-group
          = f.label :category, class: 'col-sm-4 control-label', for: :category
          .btn-group.col-sm-5{'data-toggle'=> 'buttons'}
            - Badge.categories.keys.each do |category|
              %label.btn.btn-default{ class: ('active' if @badge.category == category) }
                = f.radio_button 'category', category
                = t("activerecord.attributes.badge.categories.#{category}")

        .form-group
          = f.label :kind, class: 'col-sm-4 control-label', for: :kind
          .btn-group.col-sm-5{'data-toggle'=> 'buttons'}
            - Badge.kinds.keys.each do |kind|
              %label.btn.btn-default{ class: ('active' if @badge.kind == kind) }
                = f.radio_button 'kind', kind
                = t("activerecord.attributes.badge.kinds.#{kind}")

      .modal-footer
        = f.submit t('general.save'), class: 'btn btn-primary'
        %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}= t 'general.cancel'
